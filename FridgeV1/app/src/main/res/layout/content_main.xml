<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/background"
    tools:context="com.example.mowolfvillageon.fridgev1.MainActivity">


    <Button
        android:id="@+id/angry_btn"

        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:textSize="50sp"

        android:layout_width="325dp"
        android:layout_height="75dp"
        android:background="@drawable/buttonshape"
        android:contextClickable="true"
        android:fontFamily="sans-serif-thin"
        android:focusable="false"
        android:textAlignment="center"
        android:layout_above="@+id/angry_btn2"
        android:layout_alignStart="@+id/angry_btn2"
        android:layout_alignLeft="@+id/angry_btn2"
        android:layout_marginBottom="50dp"
        android:onClick="onLoginButtonClick" />

    <Button
        android:id="@+id/angry_btn2"

        android:text="SIGN UP"
        android:textColor="#FFFFFF"
        android:textSize="50sp"


        android:layout_width="325dp"
        android:layout_height="75dp"
        android:background="@drawable/buttonshape2"
        android:layout_marginBottom="41dp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-thin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onSigninButtonClick" />
</RelativeLayout>
